<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PagoRecyclerView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    </style>

    <style name="PagoPlatformV23" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:navigationBarColor">@color/pago_white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlHighlight">@color/pago_ripple_color</item>
        <item name="colorControlNormal">@color/pago_blue</item>
        <item name="colorControlActivated">@color/pago_blue</item>
    </style>

    <style name="Theme.Pago.White" parent="PagoPlatformV23">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/pago_white</item>
        <item name="colorPrimaryDark">@color/pago_white</item>
        <item name="colorAccent">@color/pago_blue</item>
        <item name="titleTextColor">@color/pago_primary_text_black</item>
        <item name="colorControlNormal">@color/pago_primary_text_black</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="colorControlActivated">@color/pago_primary</item>
    </style>

    <style name="Theme.PagoRecyclerView.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PagoRecyclerView.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>